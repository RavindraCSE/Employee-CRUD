@model List<EmployeeCRUDOperations.Models.Employee>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee CRUD Operation</title>
</head>
<body>
    <div>
        <h1>Employee Details</h1>
        <h3> @TempData["SuccessMessage"]</h3>
        <table>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Name</td>
                    <td>Location</td>
                    <td>Salary</td>
                    <td>Department Id</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                <tr>
                    <td>@emp.ID</td>
                    <td>@emp.Name</td>
                    <td>@emp.Location</td>
                    <td>@emp.Salary</td>
                    <td>@emp.DeptId</td>
                    <td><a href="/Home/DeleteEmployee/@emp.ID">Delete</a></td>
                    <td><a href="/Home/EditEmployee/@emp.ID">Edit</a></td>
                </tr>
                }
            </tbody>
        </table>
        <a href="/Home/CreateEmployee">Add New Employee Details</a>
    </div>

</body>
</html>
